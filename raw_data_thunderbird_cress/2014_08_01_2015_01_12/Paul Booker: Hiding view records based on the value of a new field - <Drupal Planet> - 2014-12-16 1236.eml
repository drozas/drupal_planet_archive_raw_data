function mymodule_update_7001(&$sandbox) {

  $uids = db_select('users', 'u')
    ->fields('u', array('uid'))
		->execute()
		->fetchCol();
		
  foreach ($uids as $uid) {
  
    db_insert('field_data_field_profile_hidden')
      ->fields(array(
        'entity_type' => 'user',
        'bundle' => 'user',
        'entity_id' => $uid,
        'revision_id' => $uid,
        'language' => 'und',
        'delta' => 0,
        'field_profile_hidden_value' => 0,
    ))
    ->execute();
  
  }		
}
